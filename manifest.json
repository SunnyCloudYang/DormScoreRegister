{
    "name": "THU Dorm Score Register Helper",
    "description": "Help THU students registering dorm score",
    "version": "2.1.0",
    "manifest_version": 2,

    "author": "SunnyCloudYang",
    "permissions": [
        "storage",
        "scripting"
    ],
    "background": {
        "scripts": ["./assets/js/background.js"]
    },
    "browser_action": {
        "default_title": "Dorm Score Register Helper",
        "default_popup": "settings.html",
        "default_icon": {
            "32": "assets/img/favicon-32x32.png",
            "48": "assets/img/48x48.png",
            "128": "assets/img/128x128.png"
        }
    },
    "icons": {
        "16": "assets/img/favicon-16x16.png",
        "32": "assets/img/favicon-32x32.png",
        "48": "assets/img/48x48.png",
        "128": "assets/img/128x128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://hm.myhome.tsinghua.edu.cn/",
                "http://hm.myhome.tsinghua.edu.cn/AdminLogin.aspx",
                "http://hm.myhome.tsinghua.edu.cn/Adminlogin.aspx"
            ],
            "js": [
                "./assets/js/login.js"
            ],
            "css": [
                "./assets/css/login.css"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "http://hm.myhome.tsinghua.edu.cn/default.aspx"
            ],
            "js": [
                "./assets/js/autocomplete.js"
            ],
            "run_at": "document_end"
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "thu-dorm-score-register-helper@SunnyCloudYang",
            "update_url": "https://raw.githubusercontent.com/SunnyCloudYang/DormScoreRegister/firefox/updates.json"
        }
    }
}